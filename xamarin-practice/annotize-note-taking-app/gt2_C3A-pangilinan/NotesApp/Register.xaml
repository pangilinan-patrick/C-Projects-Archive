<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.Register"
             BackgroundImageSource="minimal_pink_wallpaper.jpg"
             Title="Register">
    
    <ScrollView>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Image Source="AnnotizeLogo.png" WidthRequest="150"/>
            <StackLayout Margin="20" HorizontalOptions="Center">
                <Label FontSize="Title" FontAttributes="Bold" Text="Annotize!" TextColor="White" HorizontalTextAlignment="Center"/>
                <Label FontSize="Subtitle" Text="All your notes in one place" TextColor="White" HorizontalTextAlignment="Center"/>
            </StackLayout>

            <Entry Placeholder="Email" TextColor="White" PlaceholderColor="LightGray"></Entry>
            <Entry Placeholder="Username" TextColor="White" PlaceholderColor="LightGray"></Entry>
            <Entry Placeholder="Password" TextColor="White" PlaceholderColor="LightGray" IsPassword="True"></Entry>
            <Entry Placeholder="Confirm Password" TextColor="White" PlaceholderColor="LightGray" IsPassword="True"></Entry>

            <Button
                VerticalOptions="Center"
                Text="Register"
                BorderWidth="1.5"
                CornerRadius="50"
                TextColor="Black"
                BackgroundColor="white"
                BorderColor="white"
                Margin="0,10,0,10"
                ></Button>

            <BoxView HorizontalOptions="FillAndExpand" HeightRequest="1" WidthRequest="1" Color="DarkSlateGray" />

            <Button
                VerticalOptions="Center"
                ContentLayout="Left,5"
                ImageSource="google"
                Text="Register with Google"
                BorderWidth="1.5"
                CornerRadius="50"
                BackgroundColor="#DB4437"
                BorderColor="#DB4437"
                Margin="0,10,0,10"
                ></Button>

            <Button
                VerticalOptions="Center"
                ContentLayout="Left,5"
                ImageSource="facebook"
                Text="Register with Facebook"
                TextColor="white"
                BorderWidth="1.5"
                CornerRadius="50"
                BackgroundColor="#4267B2"
                BorderColor="#4267B2"
                ></Button>

            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="By registering, you agree with our " TextColor="LightGray" FontSize="Micro"/>
                        <Span Text="Terms and Conditions" TextColor="LightGray" FontAttributes="Bold" TextDecorations="Underline" FontSize="Micro"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
    </ScrollView>
</ContentPage>